{
    "folder":{
        "tableName" : "folder",
        "class"     : "AppFolder",
        "options"   : {
            "collate":   "utf8_general_ci",
            "charset":   "utf8"
        },
        "columns"   : {
            "folderId"      : { "type": "integer", "primary": true, "autoincrement": true},
            "name"          : { "type": "string" },
            "novelCount"    : { "type": "int" , "default": 0},
            "folderCount"   : { "type": "int" , "default": 0},
            "order"         : { "type": "int" },
            "parentFolderId": { "type": "integer", "default": 0 }
        },
        "indexes": [
                    [ "parentFolderId", ["order", "DESC"] ]
                    ]
    },
    
    
    
    "novel":{
        "tableName": "novel",
        "class":     "AppNovel",
        "options": {
            "collate":   "utf8_general_ci",
            "charset":   "utf8"
        },
        "columns": {
            "novelId":      { "type": "integer", "primary": true, "autoincrement": true },
            "title":        { "type": "string" },
            "writer":       { "type": "string" },
            "genre":        { "type": "string" },
            "storyCount":   { "type": "integer" },
            "novelState":   { "type": "string" },
            "updatedDate":  { "type": "string" },
            "readState":    { "type": "integer" , "default": 0},
            "siteType":     { "type": "integer" },
            "bookmarkStory":{ "type" : "integer", "default": -1},
            "bookmarkPage": { "type" : "integer", "default": -1},
            "order":        { "type": "integer" },
            "parentFolderId": {"type": "integer", "default": 0 }
        },
        "indexes":[
                   [ "parentFolderId",  ["order", "DESC"] ],
                   [ "readState" ]
                   ]
    },
    
    
    
    
    "narou": {
        "tableName": "narou",
        "class":     "AppNarou",
        "options":{
            "collate":   "utf8_general_ci",
            "charset":   "utf8"
        },
        "columns":{
            "novelId":        { "type": "integer", "primary": true},
            "ncode":          { "type": "string" },
            "userid":         { "type": "integer" },
            "title":          { "type": "string" },
            "writer":         { "type": "string" },
            "novelType":      { "type": "integer" },
            "generalAllNo":   { "type": "integer" },
            "novelupdatedAt": { "type": "string" },
            "end":            { "type": "integer" },
            "story":          { "type": "string" },
            "genre":          { "type": "integer" },
            "gensaku":        { "type": "string" },
            "keyword":        { "type": "string" },
            "generalFirstup": { "type": "string" },
            "generalLastup":  { "type": "string" },
            "length":         { "type": "integer" },
            "time":           { "type": "integer" },
            "isstop":         { "type": "integer" },
            "pcOrK":          { "type": "integer" },
            "globalPoint":    { "type": "integer" },
            "favNovelCnt":    { "type": "integer" },
            "reviewCnt":      { "type": "integer" },
            "allPoint":       { "type": "integer" },
            "allHyokaCnt":    { "type": "integer" },
            "sasieCnt":       { "type": "integer" },
            "kaiwaritu":      { "type": "integer" },
            "updatedAt":      { "type": "string" }
        },
        
        "indexes": [
                    [ "ncode" ]
                    ]
    },
    
    "story":{
        "tableName": "story",
        "class":     "AppStory",
        "options":{
            "collate":   "utf8_general_ci",
            "charset":   "utf8"
        },
        "columns":{
            "novelId":        { "type": "integer" },
            "storyId":        { "type": "integer" },
            "chapterId":      { "type": "integer" },
            "chapterTitle":   { "type": "string" },
            "date":           { "type": "string" },
            "readFlag":       { "type": "int" , "default": 0},
            "title":          { "type": "string" },
            "url":            { "type": "string" },
            "body":           { "type": "string" },
            "beforeBody":     { "type": "string" },
            "afterBody":      { "type": "string" }
        },
        "primary":[ "novelId", "storyId" ],
        "indexes":[
                   [ "novelId", "title"],
                   [ "novelId", "readFlag"],
                   [ "novelId", "chapterId", "storyId" ],
                   [ "novelId", "storyId" ]
                   ]
    },
    
    "story_temp":{
        "tableName": "story_temp",
        "class":     "AppStoryTemp",
        "options":{
            "collate":   "utf8_general_ci",
            "charset":   "utf8"
        },
        "columns":{
            "novelId":        { "type": "integer" },
            "storyId":        { "type": "integer" },
            "chapterId":      { "type": "integer" },
            "chapterTitle":   { "type": "string" },
            "date":           { "type": "string" },
            "readFlag":       { "type": "int" , "default": 0},
            "title":          { "type": "string" },
            "url":            { "type": "string" },
            "body":           { "type": "string" },
            "beforeBody":     { "type": "string" },
            "afterBody":      { "type": "string" }
        },
        "primary":[ "novelId", "storyId" ]
    }
}
